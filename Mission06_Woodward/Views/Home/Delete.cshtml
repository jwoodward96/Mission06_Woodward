@model Mission06_Woodward.Models.Movie

<h3>Are you sure you want to delete this movie?</h3>

<div class="card p-3">
    <h4>@Model.Title (@Model.Year)</h4>
    <p><strong>Director:</strong> @Model.Director</p>
</div>

<form asp-action="DeleteConfirmed" method="post" class="mt-3">
    <input type="hidden" asp-for="MovieId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="MovieList" class="btn btn-secondary">Cancel</a>
</form>