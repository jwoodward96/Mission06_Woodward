@model Mission06_Woodward.Models.Movie

<h2 class="mb-4">Add / Edit Movie</h2>

<form asp-action="MovieForm" method="post" class="container">

    @if (Model != null && Model.MovieId != 0)
    {
        <input type="hidden" asp-for="MovieId" />
    }

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label class="form-label">Title</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Year</label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Director</label>
        <input asp-for="Director" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Rating</label>
        <input asp-for="Rating" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Edited?</label>
        <select asp-for="Edited" class="form-select">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Copied To Plex?</label>
        <select asp-for="CopiedToPlex" class="form-select">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Lent To</label>
        <input asp-for="LentTo" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Notes</label>
        <input asp-for="Notes" maxlength="25" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="MovieList" class="btn btn-secondary ms-2">Cancel</a>

</form>